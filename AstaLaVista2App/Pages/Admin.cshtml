@page
@model AdminModel
<!DOCTYPE html>
<html>

<head>
    <title>Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body style="padding-bottom: 100px;">
    <nav class="navbar navbar-dark bg-dark">
        <div class="container">
            <a href="/" class="navbar-brand">‚Üê Torna alle aste</a>
            <span class="text-white">‚öôÔ∏è Pannello Admin</span>
        </div>
    </nav>

    <div class="container mt-4">
        <div class="row">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">‚ûï Crea Nuova Asta</h5>
                    </div>
                    <div class="card-body">
                        <form method="post" asp-page-handler="Create">
                            <div class="mb-2">
                                <input asp-for="Title" class="form-control" placeholder="Titolo" required />
                            </div>
                            <div class="mb-2">
                                <textarea asp-for="Description" class="form-control" placeholder="Descrizione" rows="2"
                                    required></textarea>
                            </div>
                            <div class="mb-2">
                                <input asp-for="StartPrice" class="form-control" type="number" step="0.01"
                                    placeholder="Prezzo iniziale ‚Ç¨ " required />
                            </div>
                            <div class="mb-2">
                                <input asp-for="ImageUrl" class="form-control" placeholder="URL immagine (opzionale)" />
                                <small class="text-muted">Es: https://example.com/foto.jpg</small>
                            </div>
                            <div class="mb-2">
                                <input asp-for="Hours" class="form-control" type="number" placeholder="Durata (ore)"
                                    required />
                                    <small class="text-muted">Es: 24 ore, 48 ore, 72 ore...</small>
                            </div>
                            <button type="submit" class="btn btn-primary w-100">Crea</button>
                        </form>
                    </div>
                </div>
            </div>

            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Tutte le Aste</h5>
                    </div>
                    <div class="card-body">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Titolo</th>
                                    <th>Prezzo</th>
                                    <th>Offerte</th>
                                    <th>Stato</th>
                                    <th>Azioni</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var auction in Model.Auctions)
                                {
                                    <tr>
                                        <td>@auction.Title</td>
                                        <td>‚Ç¨@auction.CurrentPrice</td>
                                        <td>@auction.Bids.Count</td>
                                        <td>
                                            @if (auction.Active && auction.EndDate > DateTime.Now)
                                            {
                                                <span class="badge bg-success">Attiva</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Chiusa</span>
                                            }
                                        </td>
                                        <td>
                                            <form method="post" asp-page-handler="Close" asp-route-id="@auction.Id"
                                                style="display:inline;">
                                                <button type="submit" class="btn btn-sm btn-warning"
                                                    title="Chiudi">üîí</button>
                                            </form>
                                            <form method="post" asp-page-handler="Delete" asp-route-id="@auction.Id"
                                                style="display:inline;">
                                                <button type="submit" class="btn btn-sm btn-danger" title="Elimina"
                                                    onclick="return confirm('Sicuro?')">üóëÔ∏è</button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>


<div class="col-md-12 mt-4">
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">üë• Portafogli Utenti</h5>
        </div>
        <div class="card-body">
            <table class="table table-sm">
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th>Portafoglio</th>
                        <th>Admin</th>
                    </tr>
                </thead>
               <tbody>
                    @foreach (var user in Model.Users)
                    {
                        var isCurrentUser = user.Id == HttpContext.Session.GetInt32("UserId");
                        
                        <tr>
                            <td>
                                @user.Name
                                @if (isCurrentUser)
                                {
                                    <span class="badge bg-info">Tu</span>
                                }
                            </td>
                            <td>
                                <strong class="@(user.Wallet < 500 ? "text-danger" : "text-success")">
                                    ‚Ç¨@user.Wallet
                                </strong>
                            </td>
                            <td>
                                @if (user.IsAdmin)
                                {
                                    <span class="badge bg-danger">Admin</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Utente</span>
                                }
                            </td>
                            <td>
                                @if (!isCurrentUser)
                                {
                                    <form method="post" asp-page-handler="DeleteUser" asp-route-userId="@user.Id" style="display:inline;">
                                        <button type="submit" class="btn btn-sm btn-danger" 
                                                onclick="return confirm('Sicuro di voler eliminare @user.Name? Verranno eliminate anche tutte le sue offerte!')">
                                            üóëÔ∏è Elimina
                                        </button>
                                    </form>
                                }
                                else
                                {
                                    <span class="text-muted small">Non puoi eliminare te stesso</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


        </div>
    </div>
</body>

</html>