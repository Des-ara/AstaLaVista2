@page
@model AuctionModel
<!DOCTYPE html>
<html>

<head>
    <title>@Model.Auction?.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body style="padding-bottom: 100px;">
    <nav class="navbar navbar-dark bg-primary">
        <div class="container">
            <a href="/" class="navbar-brand">‚Üê Torna alle aste</a>
            <span class="text-white">üí∞ Portafoglio: ‚Ç¨ @Model.UserWallet</span>
        </div>
    </nav>

    <div class="container mt-4">

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger alert-dismissible fade show">
                <strong>‚ùå Errore:</strong> @Model.ErrorMessage
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (TempData["TimeExtended"] != null)
{
    <div class="alert alert-info alert-dismissible fade show">
        <strong>‚è∞ Tempo esteso!</strong> L'asta √® stata prolungata di 10 secondi.
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

        @if (Model.Auction != null)
        {
            <div class="row">
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-body">
                            <h2>@Model.Auction.Title</h2>

                            <div class="alert alert-warning text-center mb-3">
                                <h4 class="mb-0">
                                    <span class="countdown-detail"
                                        data-end="@Model.Auction.EndDate.ToString("O")">Calcolo...</span>
                                </h4>
                                <small class="text-muted">Tempo rimanente</small>
                            </div>

                            @if (!string.IsNullOrEmpty(Model.Auction.ImageUrl))
                            {
                                <img src="@Model.Auction.ImageUrl" class="img-fluid rounded mb-3" alt="@Model.Auction.Title"
                                    style="max-height: 400px; object-fit: cover; width: 100%;">
                            }

                            <p class="lead">@Model.Auction.Description</p>
                            <hr>
                            <hr>
                            <h4 class="text-success">Offerta corrente: ‚Ç¨ @Model.Auction.CurrentPrice</h4>

                            <h5 class="mt-4">Cronologia offerte</h5>
                            @foreach (var bid in Model.Auction.Bids.OrderByDescending(b => b.Date))
                            {
                                var isMe = bid.UserId == Model.UserId;
                                <div class="alert @(isMe ? "alert-primary" : "alert-secondary") py-2">
                                    <strong>@bid.UserName</strong> - ‚Ç¨ @bid.Amount
                                    <small class="float-end">@bid.Date.ToString("dd/MM HH:mm")</small>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <h4>Fai la tua offerta</h4>

                            <div class="alert alert-info py-2 mb-3">
                                üí∞ Disponibile: ‚Ç¨ @Model.UserWallet
                            </div>

                            <form method="post">
                                <input type="hidden" name="id" value="@Model.Auction.Id" />
                                <div class="mb-3">
                                    <input asp-for="Amount" class="form-control" type="number"
                                        min="@(Model.Auction.CurrentPrice + 1)" max="@Model.UserWallet" step="0.01"
                                        value="@(Model.Auction.CurrentPrice + 10)" required />
                                    <small class="text-muted">Minimo: ‚Ç¨ @(Model.Auction.CurrentPrice + 1) | Massimo:
                                        ‚Ç¨@Model.UserWallet</small>
                                </div>
                                <button type="submit" class="btn btn-primary w-100">üí∞ Offri</button>
                            </form>

                            <div class="mt-3 d-grid gap-2">
                                <button class="btn btn-sm btn-outline-secondary"
                                    onclick="document.querySelector('input[name=Amount]').value=@(Model.Auction.CurrentPrice + 5)">
                                    +‚Ç¨ 5
                                </button>
                                <button class="btn btn-sm btn-outline-secondary"
                                    onclick="document.querySelector('input[name=Amount]').value=@(Model.Auction.CurrentPrice + 10)">
                                    +‚Ç¨ 10
                                </button>
                                <button class="btn btn-sm btn-outline-secondary"
                                    onclick="document.querySelector('input[name=Amount]').value=@(Model.Auction.CurrentPrice + 20)">
                                    +‚Ç¨ 20
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <script>
        function updateCountdown() {
            const el = document.querySelector('.countdown-detail');
            if (!el) return;

            const end = new Date(el.dataset.end);
            const now = new Date();
            const diff = end - now;

            if (diff <= 0) {
                el.innerHTML = '‚è∞ TERMINATA';
                el.parentElement.parentElement.classList.remove('alert-warning');
                el.parentElement.parentElement.classList.add('alert-danger');
                setTimeout(() => location.reload(), 2000);  // Ricarica dopo 2 secondi
            } else {
                const days = Math.floor(diff / (1000 * 60 * 60 * 24));
                const hours = Math.floor((diff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                const minutes = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));
                const seconds = Math.floor((diff % (1000 * 60)) / 1000);

                if (days > 0) {
                    el.innerHTML = `‚è∞ ${days}g ${hours}h ${minutes}m ${seconds}s`;
                } else if (hours > 0) {
                    el.innerHTML = `‚è∞ ${hours}h ${minutes}m ${seconds}s`;
                } else if (minutes > 0) {
                    el.innerHTML = `‚è∞ ${minutes}m ${seconds}s`;
                } else {
                    el.innerHTML = `‚è∞ ${seconds}s`;
                    el.parentElement.parentElement.classList.remove('alert-warning');
                    el.parentElement.parentElement.classList.add('alert-danger');
                    el.style.fontSize = '2rem';  // Ingrandisce negli ultimi secondi
                }

                // Ricarica automaticamente ogni 5 secondi per vedere nuove offerte
                if (seconds % 5 === 0) {
                    // location.reload();  // Decommenta se vuoi ricaricare automaticamente
                }
            }
        }

        updateCountdown();
        setInterval(updateCountdown, 1000);
    </script>

</body>

</html>